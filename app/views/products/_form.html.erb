<%= form_with model: product do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% product.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
        <% product.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
            <%= form.label :status %>
            <%= form.select :status, Visible::VALID_STATUSES, selected: product.status || "public" %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>